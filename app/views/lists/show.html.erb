<h1>Lists#show</h1>

<h2><%= @list.name %></h2>
<div class="cards">
  <% @list.movies.each do |movie| %>
    <%= link_to  movie_path(movie), style:"text-decoration:none; color: black" do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= movie.poster_url %>);">
          <%= movie.name %>
      </div>
        <% movie.bookmarks.each do |bookmark| %>
          <p><%= bookmark.comment %></p>
        <% end %>
    <% end %>
  <% end %>
</div>

<%= link_to  "Add a new movie", new_list_bookmark_path(@list), class:"btn btn-gradient" %>


